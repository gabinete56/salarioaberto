{
  "name": "Revela Salários",
  "description": "Análisa as páginas da Câmara Municipal de São Paulo e Assembléia Legislativa de São Paulo e revela o nome dos servidores escondidos atrás das matriculas na página de Salários Abertos.",
  "version": "0.0.1",
  "permissions": [
    "activeTab",
    "http://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
     "19": "images/icon19.png",
     "38": "images/icon38.png"
    },
    "default_title": "Revela Salários [Ligado]"
  },
  "content_scripts": [ {
	"css": [],
  	"js": [ "lib/jquery-2.1.0.min.js", "lib/jquery.typist.min.js", "lib/csv.js", "script.js" ],
    "matches": [ "http://www.camara.sp.gov.br/transparencia/salarios-abertos/remuneracao-dos-servidores-e-comissionados/" ],
    "run_at": "document_idle"
   } ],
   "web_accessible_resources": [
        "worker.js", "data/*.csv"
   ],
   "icons": { "16": "images/icon16.png",
           "48": "images/icon48.png",
          "128": "images/icon128.png" },
  "manifest_version": 2
}
